<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_gravity="center"
    tools:context=".persona.PersonaActivity">

    <ImageView
        android:id="@+id/personaImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_confused_emoji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/personaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        style="@style/PersonaTextView"
        app:layout_constraintStart_toEndOf="@+id/personaImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personaStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PersonaTextView"
        app:layout_constraintStart_toEndOf="@+id/personaImage"
        app:layout_constraintTop_toBottomOf="@+id/personaName" />

    <TextView
        android:id="@+id/personaSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PersonaTextView"
        app:layout_constraintStart_toEndOf="@+id/personaImage"
        app:layout_constraintTop_toBottomOf="@+id/personaStatus" />

    <TextView
        android:id="@+id/personaGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PersonaTextView"
        app:layout_constraintStart_toEndOf="@+id/personaImage"
        app:layout_constraintTop_toBottomOf="@+id/personaSpecies" />

    <TextView
        android:id="@+id/personaOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PersonaTextView"
        app:layout_constraintStart_toEndOf="@+id/personaImage"
        app:layout_constraintTop_toBottomOf="@+id/personaGender" />

    <TextView
        android:id="@+id/personaLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PersonaTextView"
        app:layout_constraintStart_toEndOf="@+id/personaImage"
        app:layout_constraintTop_toBottomOf="@+id/personaOrigin" />

</android.support.constraint.ConstraintLayout>